@model RepairCompanyManagement.WebUI.Models.OrderTaskDescriptionViewModel
@{ ViewBag.Title = "Create a new Description";
    var date = Model.Date;}
<h2>@ViewBag.Title</h2>

<div class="alert alert-info" role="alert">
    <strong>Attention!</strong> Here you can provide the address of 
    the task or other useful information
</div>
@using (Html.BeginForm("Description", "Orders", FormMethod.Post, new { @class = "" }))
{
    @Html.HiddenFor(x => x.OrderId)
    @Html.HiddenFor(x => x.SpecId)
    @Html.Hidden("Date", Model.Date)
    @Html.HiddenFor(x => x.TaskId)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row">
        @Html.LabelFor(m => m.Description, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "Description" })
            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger name" })
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
}