@model IReadOnlyCollection<RepairCompanyManagement.WebUI.Models.MyOrdersViewModel>
@{ ViewBag.Title = "My Orders";
    var anyOrders = Model != null && Model.Any();
    var isManager = User.IsInRole("Manager");
    }

<h2>Orders</h2>
<hr />
@Html.ActionLink("Create new...", "Create", "Orders", null, new { @class = "btn btn-primary" })
<hr />
<table class="table">
    <tr>
        @if (isManager)
        {
        <th>Title</th>
        <th>Brigade</th>
        <th>Customers</th>
        <th>OrderStatus</th>
        <th>Requirements</th>
        <th></th>
        }
        else
        {
        <th>Status</th>
        <th>Title</th>
        <th>Price</th>
        <th>Requirements</th>
        <th></th>
        }
    </tr>
    @if (anyOrders)
    {
        foreach (var item in Model)
        {
<tr>
    @Html.Partial("MyOrdersTableItem", item)
</tr> }
            }
            else
            {
<tr>
    <td colspan="5" class="text-center">No orders</td>
</tr>}
</table>
<br>