@model RepairCompanyManagement.WebUI.Models.TaskViewModel

<h3><strong>Confirm task</strong></h3>

<div class="alert alert-secondary" role="alert">
    <p><strong>Title: </strong>@Model.Title</p>
    <p><strong>Specialization: </strong>@Model.SpecializationName</p>
    <p><strong>Task complete date: </strong>@Model.TaskCompletionDate.ToString("d")</p>
    <p><strong>Price: </strong>@Model.Price</p>
</div>
<div>
    @Html.ActionLink("Confirm", "CreateOrderTask", "Orders", new { taskId = Model.Id, orderId = Model.OrderId, date = Model.TaskCompletionDate, description = Model.Description }, new { @class = "btn btn-outline-success" })
</div>
<br />