@model RepairCompanyManagement.WebUI.Models.TaskSpecializationViewModel
@{
    ViewBag.Title = "Create a new task";
}
<h2>@ViewBag.Title</h2>

<hr />
@using (Html.BeginForm("SelectTaskSpecialization", "Orders", FormMethod.Post, new { @class = "" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.HiddenFor(x => x.OrderId)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row">
        @Html.LabelFor(model => model.IdSpecialization, new { @class = "control-label col-md-2" })
        <div class="col-md-10 center justify-content-center" style="width:250px">
            @Html.DropDownListFor(model => model.IdSpecialization,
                     new SelectList(Model.SpecializationItems, "SpecializationId", "Name", ""), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdSpecialization, "", new { @class = "text-danger", @id = "error" })
        </div>
    </div>

  
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Confirm</button>
    </div>
}
<br>
@Html.ActionLink("Return to Tasks", "Info", "Orders", new { id = Model.OrderId }, new { @class = "btn btn-outline-secondary" })