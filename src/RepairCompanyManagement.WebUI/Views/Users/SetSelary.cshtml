@model RepairCompanyManagement.WebUI.Models.SetSelaryViewModel
@{ ViewBag.Title = "Set selary for new user"; }
<h2>@ViewBag.Title</h2>

<hr />
@using (Html.BeginForm("SetSelary", "Users", FormMethod.Post, new { @class = "" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.HiddenFor(x => x.IdentityUserId)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row">
        @Html.LabelFor(m => m.Selary, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Selary, new { @class = "form-control", placeholder = "Selary" })
            @Html.ValidationMessageFor(m => m.Selary, "", new { @class = "text-danger name" })
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Set</button>
    </div>
}
<br>
@Html.ActionLink("Return to Users", "Index", new { @class = "btn btn-secondary" })