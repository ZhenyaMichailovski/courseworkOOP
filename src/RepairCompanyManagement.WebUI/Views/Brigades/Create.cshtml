@model RepairCompanyManagement.WebUI.Models.BrigadeViewModel
@{ ViewBag.Title = "Create a new brigade"; }
<h2>@ViewBag.Title</h2>

<hr />
@using (Html.BeginForm("Create", "Brigades", FormMethod.Post, new { @class = "" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    //@Html.HiddenFor(x => x.SpecializationItems)

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row">
        @Html.LabelFor(m => m.Title, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Name" })
            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger name" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.IdSpecialization, new { @class = "control-label col-md-2" })
        <div class="col-md-10 center justify-content-center" style="width:250px">
            @Html.DropDownListFor(model => model.IdSpecialization, 
           new SelectList(Model.SpecializationItems, "SpecializationId", "Name", ""), new { @class = "form-control" }),
            @Html.ValidationMessageFor(model => model.IdSpecialization, "", new { @class = "text-danger", @id = "error" })
        </div>
    </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>}
<br>
@Html.Partial("_ReturnToBrigades")