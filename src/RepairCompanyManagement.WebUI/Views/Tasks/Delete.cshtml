@model RepairCompanyManagement.WebUI.Models.ManagerTaskViewModel
@{ ViewBag.Title = "Delete " + Model.Title; }

<h3>Are you sure you want to <strong>delete this task</strong>?</h3>

<div class="alert alert-secondary" role="alert">
    <p><strong>@Html.LabelFor(e => e.Title): </strong>@Model.Title</p>
    <p><strong>@Html.LabelFor(e => e.Brigade): </strong>@Model.Brigade</p>
    <p><strong>@Html.LabelFor(e => e.Specialization): </strong>@Model.Specialization</p>
    <p><strong>@Html.LabelFor(e => e.Price): </strong>@Model.Price</p>
    <p><strong>@Html.LabelFor(e => e.Description): </strong>@Model.Description</p>
</div>
<div>
    @Html.ActionLink("Delete", "ConfirmDelete", "Tasks", new { id = Model.Id, }, new { @class = "btn btn-outline-danger" })
</div>
<br />
@Html.Partial("_ReturnToBrigades")