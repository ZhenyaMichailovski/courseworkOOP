@model RepairCompanyManagement.WebUI.Models.ManagerTaskViewModel
@{ var title = "Update tasks";
    ViewBag.Title = $"{title} {Model.Title}"; }
<h2>@title <i>@Model.Title</i></h2>

<hr />
@using (Html.BeginForm("Update", "Tasks", FormMethod.Post, new { @class = "" }))
{
 @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @*@Html.HiddenFor(x => x.SpecializationId)
    @Html.HiddenFor(x => x.BrigadeId)
    @Html.HiddenFor(x => x.Id)*@

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row">
        @Html.LabelFor(m => m.Title, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Name" })
            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger name" })
        </div>
    </div>

     @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row">
        @Html.LabelFor(m => m.Price, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", placeholder = "Name" })
            @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger name" })
        </div>
    </div>

     @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row">
        @Html.LabelFor(m => m.Description, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "Name" })
            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger name" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.SpecializationId, new { @class = "control-label col-md-2" })
        <div class="col-md-10 center justify-content-center" style="width:250px">
            @Html.DropDownListFor(model => model.SpecializationId,
                     new SelectList(Model.SpecializationItems, "SpecializationId", "Name", ""), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Specialization, "", new { @class = "text-danger", @id = "error" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.BrigadeId, new { @class = "control-label col-md-2" })
        <div class="col-md-10 center justify-content-center" style="width:250px">
            @Html.DropDownListFor(model => model.BrigadeId,
                     new SelectList(Model.BrigadeItems, "Id", "Name", ""), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Brigade, "", new { @class = "text-danger", @id = "error" })
        </div>
    </div>

<div class="form-group">
    <button type="submit" class="btn btn-primary">Update</button>
</div>}
