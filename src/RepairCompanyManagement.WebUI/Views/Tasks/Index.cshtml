@model IReadOnlyCollection<RepairCompanyManagement.WebUI.Models.ManagerTaskViewModel>
@{ ViewBag.Title = "Task";
    var anyBrigades = Model != null; }

<h2>Task</h2>
<hr />
@Html.ActionLink("Create new...", "Create", "Tasks", null, new { @class = "btn btn-primary" })
<hr />
<table class="table">
    <tr>
        <th>Title</th>
        <th>Specialization</th>
        <th>Price</th>
        <th>Description</th>
        <th>Brigade</th>
        <th></th>
        <th></th>
    </tr>
    @if (anyBrigades)
    {
        foreach (var item in Model)
        {
<tr>
    @Html.Partial("_TasksTableItem", item)
</tr> }
            }
            else
            {
<tr>
    <td colspan="7" class="text-center">No Brigades</td>
</tr>}
</table>
